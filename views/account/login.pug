extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Sign in
  form(method='POST')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='username') Username
      .col-md-7
        input.form-control(name='username', id='username', placeholder='Username', autofocus, required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') Password
      .col-md-7
        input.form-control(type='password', name='password', id='password', placeholder='Password', required)
    .form-group
      .offset-sm-3.col-md-7.pl-2
        button.col-md-3.btn.btn-primary(type='submit')
          i.far.fa-user.fa-sm.mr-2
          | Login
    .form-group
      .offset-sm-3.col-md-7.pl-2
        hr
    .form-group
      .offset-sm-3.col-md-7.pl-2
        a.btn.btn-block.btn-google.btn-social(href='/auth/google')
          i.fab.fa-google-plus-g.fa-xs
          | Sign in with Google